{
  "name": "feel-social",
  "version": "1.0.0",
  "description": "Social Media Server - Backend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "tsx watch -r tsconfig-paths/register src/server.ts",
    "build": "rimraf dist && tsc && tsc-alias && node scripts/addJsExtention.js",
    "ts.check": "tsc --project tsconfig.json",
    "seed": "tsx src/dummydata/seed.ts",
    "add-build": "git add dist",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "type-check": "tsx --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ]
}
